" ~/.vimrc

execute pathogen#infect()

set cc=80
set number
set hidden
set showcmd
set linebreak
set nocompatible
set backspace=indent,eol,start

syntax on
filetype indent plugin on

if &t_Co > 255
    colorscheme zenburn
endif

set guioptions=acM
set guifont=PT\ Mono\ 9

set incsearch
set smartcase
set ignorecase

set cursorline
set laststatus=2
set statusline=%n.\ %f\ %M%=%y%w%r%h\ %{&fenc}\ (%l,%c)\ %p%%

" 4 spaced expanded tabs by default
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab

" Speed up ESC in msec
set ttimeoutlen=50

" Use the X server's secondary buffer
set clipboard=unnamed

" Move viminfo out of ~
set viminfo+=n~/.vim/viminfo

" Fancy arrows are not welcome
let g:no_rust_conceal = 1

" Use clang when checking C syntax
let g:syntastic_c_compiler = 'clang'
