# HOME/local/cfg/newsbeuter/config

auto-reload yes
confirm-exit yes

reload-threads 4

mark-as-read-on-hover yes

notify-beep yes
notify-always yes
notify-xterm yes
notify-format "newsbeuter: %f/%n"

browser "$BROWSER %u &> /dev/null &"

# Keybinds
bind-key h left
bind-key k up
bind-key j down
bind-key l right

bind-key f pageup
bind-key b pagedown

# Colours
color info blue black
color article white black
color listfocus white black bold
color listfocus_unread blue white bold reverse
color listnormal white black
color listnormal_unread blue black bold
color background white black

# Macros
macro q set browser "mpv --loop-file --cache-file=TMP %u &> /dev/null &" ; open-in-browser ; set browser "$BROWSER %u &> /dev/null &"

# Open 4th url in an article
macro i open ; four ; quit
