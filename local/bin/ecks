#!/bin/sh --
# ecks - combination of xinit and startx

# requires Xorg xset xauth timeout

error() {
    # To expose printf's DSL we will need to use a positional argument for the
    # format string.
    # shellcheck disable=SC2059
    printf -- "ecks: $2" "${@:3}" >&2
    exit "$1"
}

cleanup() {
    if [ "$(ps -o comm= "$1")" = Xorg ]; then
        kill "$1"

        # Send SIGKILL after 10 seconds if the xserver is taking too long to
        # terminate.
        timeout 10 tail --pid="$1" -f /dev/null

        case $? in
            124) kill -s KILL "$1"
        esac

        xauth remove :"$tty"
    fi

    if ! stty "$stty"; then
        stty sane
    fi

    exit
}

if [ "$DISPLAY" ]; then
    error 1 '%s: DISPLAY already set\n' "$DISPLAY"
fi

if ! readonly stty=$(stty -g); then
    exit
fi

if ! readonly tty=$(fgconsole); then
    exit
fi

readonly localdir=${LOCALDIR:-$HOME/local}

readonly cfgdir=$localdir/cfg/ecks
readonly logdir=$localdir/var/log/ecks
readonly datadir=$localdir/data/ecks

readonly ecksrc=$cfgdir/ecksrc
readonly XAUTHORITY=$datadir/xauthority

mkdir -p "$cfgdir" "$logdir" "$datadir"

if [ ! -x "$ecksrc" ]; then
    error 1 '%s: not executable\n' "$ecksrc"
fi

trap 'cleanup "$pid"' EXIT

touch "$XAUTHORITY"
export XAUTHORITY

xauth add :"$tty" MIT-MAGIC-COOKIE-1 "$(mcookie)"

# Xorg will check if SIGUSR1 was set to SIG_IGN and issue its own SIGUSR1 back
# to the parent process when it is ready to accept connections.
trap 'DISPLAY=:$tty "$ecksrc"' USR1

(
    trap '' USR1
    exec /usr/lib/xorg-server/Xorg :"$tty" -keeptty vt"$tty" -logfile "$logdir/$tty" -auth "$XAUTHORITY"
) & pid=$!

wait
