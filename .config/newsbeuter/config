# ~/.config/newsbeuter/config

auto-reload yes 
confirm-exit yes
mark-as-read-on-hover yes
notify-beep yes
browser "firefox %u &> /dev/null &"

# Key binds
bind-key h left
bind-key k up
bind-key j down
bind-key l right

# Macros
macro q set browser "yt-dl %u &> /dev/null &" ; open-in-browser ; set browser "firefox %u &> /dev/null &"

# Open 4th url in an article
macro i open ; four ; quit

# Colours
color listfocus color7 color8
color info color4 color0 bold
