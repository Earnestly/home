# ~/.config/newsbeuter/config

auto-reload yes 
confirm-exit yes

mark-as-read-on-hover yes

notify-beep yes
notify-always yes
notify-xterm yes
notify-format "newsbeuter: %f/%n"

browser "firefox %u &> /dev/null &"

# Key binds
bind-key h left
bind-key k up
bind-key j down
bind-key l right

bind-key f pageup
bind-key b pagedown

# Colours
color listfocus color7 color8
color info color4 color0 bold

# Macros
macro q set browser "mpv --loop=inf %u &> /dev/null &" ; open-in-browser ; set browser "firefox %u &> /dev/null &"

# Open 4th url in an article
macro i open ; four ; quit
