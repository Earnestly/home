# ~/.config/newsbeuter/config
auto-reload yes 
confirm-exit yes
mark-as-read-on-hover yes
notify-beep yes
pager "less"
browser "firefox %u &> /dev/null &"

# key binds
bind-key h left
bind-key k up
bind-key j down
bind-key l right

# macros
macro q set browser "quvi dump -b mute %u" ; open-in-browser ; set browser "firefox %u &> /dev/null &"

# open 4th url in an article
macro i open ; four ; quit

# colors
