# Lang
slang=en,eng
alang=en,eng

# Use cache for network streams
cache=auto
cache-default=4096

# Profiles
[live]
profile-desc="Prevent A/V desync during live streams"
mc=0
autosync=30

# Make sure to cache even if we're consuming a file stream
cache=4096
