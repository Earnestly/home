# ~/.config/gliv/glivrc

# Start in full screen mode
full-screen   = False

# Maximize small images
maximize      = False

# Scale down large images
scale-down    = False

# Display the menu bar
menu          = True

# Display info about the image
info          = False

# Display scrollbars
scrollbars    = False

# Zoom centered on pointer
zoom-pointer  = False

# Alpha checks in the background
alpha-checks  = True

# Dithering
dither        = False

# Try to load every file
force-load    = False

# Build images menus at startup
build-menus   = True

# Build mipmaps
mipmap        = False

# Make mnemonics for images menus
mnemonics     = False

# Make the slide show loop
loop          = False

# Keep only one image in memory
one_image     = False

# Show thumbnails in images menus
thumbnails    = True

# Start with the slide show
start_show    = False

# Automatic window resizing
resize_win    = True

# Confirm before quitting
confirm_quit  = False

# Save options when quitting
save_quit     = False

# Enable transitions
transitions   = True

# Recursive directory traversal
recursive     = False

# Keep transfo between images
keep_transfo  = False

# Check for OpenGL errors
opengl-errors = False

# Enable OpenGL filtering
filtering     = True

# Maximum framerate
fps           = 100

# Delay before hiding the cursor
delay         = 0

# History length
history       = 1000

# Delay between images
slide-show    = 10

# Thumbnail width
thumb-width   = 128

# Thumbnail height
thumb-height  = 64

# Last/First image notice time
notice-time   = 500

# Transition duration
trans-time    = 500

# Initial image position
initial_pos   = 0

# background: red channel
bg_col_red    = 0

# background: green channel
bg_col_green  = 0

# background: blue channel
bg_col_blue   = 0

# alpha1 tile: red channel
alpha1_red    = 1717986918

# alpha1 tile: green channel
alpha1_green  = 1717986918

# alpha1 tile: blue channel
alpha1_blue   = 26214

# alpha2 tile: red channel
alpha2_red    = -1717986919

# alpha2 tile: green channel
alpha2_green  = -1717986919

# alpha2 tile: blue channel
alpha2_blue   = 39321

========== Actions

action_name = Open in Gimp
action_command = gimp-remote -- %f

==========

