#!/bin/bash
# ~/.local/bin/pomf <file [file [...]]>

for f in "$@"; do
    if [[ -e "$f" ]]; then
        upload=$(curl -sSF "files[]=@$f" http://pomf.se/upload.php)
        geturl=$(jshon -e files -e 0 -e url -u <<< "$upload")

        printf "%s: %s/%s\n" "$f" "http://a.pomf.se" "$geturl"
    fi
done
