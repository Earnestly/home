#!/bin/sh

read -r font < "${XDG_CONFIG_HOME:-$HOME/.config}"/menu/font
exec bemenu-run \
    --fn "$font" -p 'RUN' \
    --tf '#eff1f5' --tb '#bf616a' \
    --ff '#c0c5ce' --fb '#2b303b' \
    --sf '#bf616a' --sb '#343d46' \
    --nf '#65737e' --nb '#343d46' \
    --hf '#c0c5ce' --hb '#343d46' \
    --scf '#65737e' --scb '#343d46' "$@"
